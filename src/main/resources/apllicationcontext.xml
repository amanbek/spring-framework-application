<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

	<context:property-placeholder
		location="classpath:musicPlayer.properties" />

	<!-- Music beans -->
	<bean id="classical-music-1"
		class="edu.stping_framework_app.music.ClassicalMusic">
	</bean>

	<bean id="pop-music-1"
		class="edu.stping_framework_app.music.PopMusic">
	</bean>

	<bean id="rock-music-1"
		class="edu.stping_framework_app.music.RockMusic">
	</bean>

	<bean id="classical-music-2"
		class="edu.stping_framework_app.music.ClassicalMusic"
		init-method="doMyInit" destroy-method="doMyDestroy">
	</bean>


	<!-- Music Player beans -->
	<bean id="music-player-1"
		class="edu.stping_framework_app.entities.MusicPlayer"
		scope="prototype">
		<constructor-arg>
			<list>
				<ref bean="pop-music-1" />
				<ref bean="rock-music-1" />
				<ref bean="classical-music-1" />
			</list>
		</constructor-arg>
		<property name="music" ref="classical-music-1" />
		<property name="trackName" value="${musicPlayer.trackName}" />
		<property name="volume" value="${musicPlayer.volume}" />
		<property name="model" value="${musicPlayer.model}" />
	</bean>

	<bean id="music-player-2"
		class="edu.stping_framework_app.entities.MusicPlayer"
		scope="prototype">
		<constructor-arg ref="rock-music-1"></constructor-arg>
	</bean>

	<bean id="music-player-3"
		class="edu.stping_framework_app.entities.MusicPlayer"
		scope="prototype">
		<constructor-arg ref="pop-music-1"></constructor-arg>
	</bean>

	<bean id="music-player-4"
		class="edu.stping_framework_app.entities.MusicPlayer"
		scope="prototype">
		<constructor-arg>
			<list>
				<ref bean="pop-music-1" />
				<ref bean="rock-music-1" />
				<ref bean="classical-music-1" />
			</list>
		</constructor-arg>
	</bean>


</beans>